<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/sudoku_background"
tools:context="com.miage.master.myapplication.MainActivity"
tools:layout_editor_absoluteY="81dp"
tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/boutonStart"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/demarrer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462"
        android:onClick="difficulty"/>

    <Button
        android:id="@+id/Quitter"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/quitter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintVertical_bias="0.600"
        android:onClick="exitApp"
        />
</android.support.constraint.ConstraintLayout>
