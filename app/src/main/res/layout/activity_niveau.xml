<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pastel"
    tools:context="com.miage.master.myapplication.Niveau">

    <Button
        android:id="@+id/buttonTresFacile"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/tresFacile"
        android:textColor="#000000"
        android:background="@drawable/bouton_tres_facile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100"
        />

    <Button
        android:id="@+id/buttonFacile"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/facile"
        android:textColor="#000000"
        android:background="@drawable/bouton_facile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.280"
       />

    <Button
        android:id="@+id/buttonMoyen"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/moyen"
        android:textColor="#000000"
        android:background="@drawable/bouton_moyen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.460"
        />

    <Button
        android:id="@+id/buttonDifficile"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/difficile"
        android:textColor="#000000"
        android:background="@drawable/bouton_difficile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.640"

        />

    <Button
        android:id="@+id/buttonTresDifficile"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/tresDifficile"
        android:textColor="#000000"
        android:background="@drawable/bouton_tres_difficile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.820"
 />

</android.support.constraint.ConstraintLayout>
